<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:MercuryTools.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MercuryTools.Views.Tabs.InfernoUnlockTableView">
    
    <!-- Separate Explorer from Content -->
    <Grid ColumnDefinitions="300, *">
        
        <!-- Explorer -->
        <views:ExplorerView Grid.Column="0" Name="Explorer"/>
        
        <!-- Content -->
        <TextBlock Grid.Column="1" Text="InfernoUnlockTableView"/>
    </Grid>
</UserControl>