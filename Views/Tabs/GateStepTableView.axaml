<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:MercuryTools.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MercuryTools.Views.Tabs.GateStepTableView">
    
    <!-- Separate Explorer from Content -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" MinWidth="400"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="*" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        
        <!-- Explorer -->
        <views:ExplorerView Grid.Column="0" Name="Explorer"/>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Background="Transparent" ResizeDirection="Columns"/>
        
        <!-- Content -->
        <DockPanel Grid.Column="2" Name="ContentGroup" IsVisible="False">
            
            <TextBox DockPanel.Dock="Top" Classes="Inset" Name="TextBoxName" MinWidth="100" HorizontalAlignment="Left" FontSize="14" Margin="5,12,5,30" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>
            
            <ScrollViewer>
                
                <StackPanel Margin="0,0,3,0">
                    
                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="SugorokuId" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="Int16Property" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxSugorokuId" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>
                    
                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="PageNumber" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="Int16Property" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxPageNumber" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>
                    
                    <UserControl Name="ArrayTargetPoint" Margin="10"/>
                    
                    <UserControl Name="ArrayGetItemVariety" Margin="10"/>
                    
                    <UserControl Name="ArrayGetItemValue" Margin="10"/>
                    
                    <UserControl Name="ArrayTaskMusic01" Margin="10"/>
                    
                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="TaskGenre01" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="IntProperty" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxTaskGenre01" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>
                    
                    <UserControl Name="ArrayTaskMusic02" Margin="10"/>
                    
                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="TaskGenre02" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="IntProperty" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxTaskGenre02" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>

                    <UserControl Name="ArrayTaskMusic03" Margin="10"/>
                    
                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="TaskGenre03" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="IntProperty" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxTaskGenre03" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>
                    
                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="MissionMusicId" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="IntProperty" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxMissionMusicId" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>

                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="Condition" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="IntProperty" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxCondition" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>

                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="Difficulty" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="IntProperty" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxDifficulty" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>

                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="ClearRate" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="IntProperty" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxClearRate" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>

                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="RewardGatePoint" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="IntProperty" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxRewardGatePoint" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>

                    <DockPanel Margin="15,15,15,0">
                        <TextBlock DockPanel.Dock="Left" Text="EasingDay" Margin="0,0,5,0"/>
                        <TextBlock DockPanel.Dock="Left" Text="Int64Property" Foreground="{DynamicResource AnnotationBrush}" Margin="5,0,5,0"/>
                        <Rectangle Fill="{DynamicResource VeryLightBrush}" Height="1"/>
                    </DockPanel>
                    
                    <TextBox Classes="Inset" AcceptsReturn="False" AcceptsTab="False" Margin="10" Padding="10" MinHeight="30" Name="TextBoxEasingDay" TextChanging="TextBox_OnTextChanging" LostFocus="TextBox_OnLostFocus" UndoLimit="0"/>
                    
                </StackPanel>
                
            </ScrollViewer>

        </DockPanel>
        
    </Grid>
</UserControl>