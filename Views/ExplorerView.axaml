<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MercuryTools.Views.ExplorerView">
    <!-- Separate Toolbar from Search + Element List -->
    <Grid RowDefinitions="40, 1, *">
        
        <!-- Toolbar -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Background="{DynamicResource LightBrush}">
                    
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button VerticalAlignment="Center" HorizontalAlignment="Left" Width="22" Height="22" Margin="9,9,0,9" Name="ButtonOpen" ToolTip.Placement="Bottom" ToolTip.ShowDelay="0">
                    <ToolTip.Tip>
                        <StackPanel>
                            <TextBlock Text="Open File"/>
                            <TextBlock Text="Ctrl + O" Foreground="{DynamicResource AnnotationBrush}"/>
                        </StackPanel>
                    </ToolTip.Tip>
                    <PathIcon Data="{DynamicResource IconFolder}" Width="14" Height="14"/>
                </Button>
                    
                <Button VerticalAlignment="Center" HorizontalAlignment="Left" Width="22" Height="22" Margin="5,9,0,9" Name="ButtonSave" ToolTip.Placement="Bottom" ToolTip.ShowDelay="0">
                    <ToolTip.Tip>
                        <StackPanel>
                            <TextBlock Text="Save File"/>
                            <TextBlock Text="Ctrl + S" Foreground="{DynamicResource AnnotationBrush}"/>
                        </StackPanel>
                    </ToolTip.Tip>
                    <PathIcon Data="{DynamicResource IconFloppyDisk}" Width="14" Height="14"/>
                </Button>
                    
                <Rectangle Width="1" Height="30" Fill="{DynamicResource MenuBorderBrush}" Margin="8,5,3,5"/>
                        
                <ToggleButton VerticalAlignment="Center" HorizontalAlignment="Left" Width="22" Height="22" Margin="5,9,0,9" Name="ToggleSearch" ToolTip.Placement="Bottom" ToolTip.ShowDelay="0" ToolTip.Tip="Search">
                    <PathIcon Data="{DynamicResource IconSearch}" Width="14" Height="14"/>
                </ToggleButton>
            </StackPanel>
                    
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button VerticalAlignment="Center" HorizontalAlignment="Right" Width="22" Height="22" Margin="0,9,5,9" Name="ButtonDeleteElement" ToolTip.Placement="Bottom" ToolTip.ShowDelay="0" ToolTip.Tip="Delete Element">
                    <PathIcon Data="{DynamicResource IconDelete}" Width="14" Height="14"/>
                </Button>
                
                <Button VerticalAlignment="Center" HorizontalAlignment="Right" Width="22" Height="22" Margin="0,9,9,9" Name="ButtonAddElement" ToolTip.Placement="Bottom" ToolTip.ShowDelay="0" ToolTip.Tip="Add Element">
                    <PathIcon Data="{DynamicResource IconAdd}" Width="14" Height="14"/>
                </Button>
            </StackPanel>
            
        </Grid>
              
        <!-- Horizontal Separator -->
        <Rectangle Grid.Row="1" Fill="{DynamicResource MenuBorderBrushDark}"/>
                
        <!-- Search + Element List -->
        <DockPanel Grid.Row="2" Background="{DynamicResource LightBrush}">
            
            <!-- Search -->
            <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,*" RowDefinitions="Auto, 1" IsVisible="False" Name="SearchGroup">
                <PathIcon Grid.Column="0" Grid.Row="0" Data="{DynamicResource IconSearch}" Width="14" Height="14" Margin="13"/>
                        
                <TextBox Grid.Column="1" Grid.Row="0" Classes="Transparent" Name="TextBoxSearch" VerticalContentAlignment="Center" VerticalAlignment="Stretch" Watermark="Search"/>
                        
                <Rectangle Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Height="1" Fill="{DynamicResource MenuBorderBrush}"/>
            </Grid>
            
            <!-- Element List -->
            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                <TreeView Name="TreeViewElementList" Margin="5"/>
            </ScrollViewer>
            
        </DockPanel>
            
    </Grid>
    
</UserControl>